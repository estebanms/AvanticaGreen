<h1>Listing witnesses</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @witnesses.each do |witness| %>
  <tr>
    <td><%= witness.player.full_name %></td>
    <td><%= witness.status %></td>
    <td><%= link_to 'Show', witness %></td>
    <td><%= link_to 'Edit', edit_witness_path(witness) %></td>
    <td><%= link_to 'Destroy', witness, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

