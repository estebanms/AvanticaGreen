<% comment ||= @comment %>
<%= render :partial => 'comments/comment_header', :locals => { :comment => comment } %>
<% if can?(:update, comment) %>
  <%= edit_link(edit_comment_path(comment), remote: true) %>
<% end %>
<% if can?(:destroy, comment) %>
  <%= destroy_link(comment, remote: true) %>
<% end %>
<br/><b>(<%= comment.comment_type %>)</b>
<%= comment.description %>
