<h1>Listing teams</h1>

<table>
  <tr>
    <th>Score</th>
    <th>Name</th>
    <th>Code</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.score %></td>
    <td><%= team.name %></td>
    <td><%= team.code %></td>
    <td><%= team.description %></td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

