<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= format_date(game.start_date) %></td>
    <td><%= format_date(game.end_date) %></td>
    <td><%= game.active %></td>
    <td><%= show_link game %></td>
    <td><%= edit_link edit_game_path(game) %></td>
    <td><%= destroy_link game %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
