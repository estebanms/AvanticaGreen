<div id="search">
  <p id="title">Filter infractions by:</p>
  <%= form_tag(infractions_path, :method => :get) do %>
    <div id="field">
      Reporter: <%= teams_select(:infraction) %>
    </div>
    <div id="field">
      Offender: <%= teams_select(:infraction, :offender_id) %>
    </div>
    <div id="field">
      Infraction type: <%= infraction_types_select %>
    </div>
    <div id="field">
      Status: <%= statuses_select(:infraction) %>
    </div>
    <div id="submit">
      <%= submit_tag 'Filter' %> or
      <%= submit_tag 'Show all', :onclick => 'clearForm(this.form);' %>
    </div>
  <% end %>
</div>