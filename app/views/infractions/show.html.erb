<div>
<div class="main_box">
  <div class="main_box_topleft">
  <div class="main_box_topright">
    <div>
      <% if @infraction.status == Status.pending %>
      <p id="warning">
        This infraction has not been approved because there is no evidence or no witnesses have confirmed their role.
      </p>
      <% end %>
      <p>
        <b>Reporter:</b>
        <%= infraction_related_team(@infraction, :reporter) %>
      </p>
      <p>
        <b>Offender:</b>
        <%= infraction_related_team(@infraction, :offender) %>
      </p>
      <p>
        <b>Infraction type:</b>
        <%= @infraction.infraction_type %>
      </p>
      <p>
        <b>Status:</b>
        <%= @infraction.status %>
      </p>
      <p>
        <b>Description:</b>
        <%= @infraction.description %>
      </p>
      <% if @infraction.photo? %>
      <div>
        <b>Evidence:</b><br />
        <%= render :partial => 'photo', :locals => { :style => :small } %>
      </div>
      <% end %>
      <% if can? :update, @infraction %>
        <%= link_to 'Edit', edit_infraction_path(@infraction) %> |
      <% end %>
      <%= link_to 'Back', infractions_path %>  
    </div>
  </div>
  </div>
  <div class="main_box_bottomleft">
  <div class="main_box_bottomright">
  </div>
  </div>
</div>
<div>
  <%= render 'witnesses/witnesses' %>
</div>
<br/>
<div>
  <%= render 'comments/comments' %>
</div>
</div>
