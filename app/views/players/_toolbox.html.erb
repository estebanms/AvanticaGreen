<div class="detail_box">
    <h3>Additional Tools</h3>
      <div>
      <h4>Import players:</h4>
      <ul>
        <li>
          <%= form_tag(import_players_path) do %>
            <%= submit_tag('Import all players', data: { confirm: 'Are you sure you want to import all players?' }) %>
          <% end %>
        </li>
        <br/>
        <li> 
          <%= form_tag(import_players_path) do %>
            <%= label_tag('Import ') %>
            <%= text_field_tag(:number_of_players, 10, :size => 1) %>
            <%= label_tag(' players') %>
            <%= submit_tag('Import', data: { confirm: 'Are you sure you want to import that number of players?' }) %>
          <% end %>
        </li>
      </ul>
    </div>
   <br />
   <br clear="all" />
</div>
